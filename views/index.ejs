<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
</head>
<body>
    <a href="/add">
        Tambah
    </a>
    <form action="/search" method="get">
        <input type="text" name="q" placeholder="Cari nama" value="<%=src%>">
        <input type="submit" name="submit" value="cari">
    </form>
    <table border="1">
        <tr>
            <th>
                No
            </th>
            <th>
                Nama
            </th>
            <th>
                Kelas
            </th>
            <th>
                Aksi
            </th>
        </tr>
        <% for(let i = 0; i < collection.length; i++) {%>
            <tr>
                <td>
                    <%=i+1%>
                </td>
                <td>
                    <%=collection[i].nama%>
                </td>
                <td>
                    <%=collection[i].kelas%>
                </td>
                <td>
                    <a href="/update/<%=collection[i]._id%>">Edit</a>
                    |
                    <a href="/delete/<%=collection[i]._id%>">Hapus</a>
                </td>
            </tr>
        <%} %>
    </table>
</body>
</html>